<!doctype html>
<html lang="en">
<head>
    <%- include('./includes/head.ejs') %>
</head>
<body>
<header>
    <%- include('./includes/navbar.ejs') %>
</header>
<main>
    <div class="container-fluid">
        <div class="mt-3" style="width: 50%">
            <form action="/customers/add" method="post" tyle="text-align: center">
                <div class="mb-3 input-group-sm">
                    <span class="input-group-text bg-primary text-white">Фамилия, Имя, Отчество</span>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-primary text-white">Ф.</span>
                        <input class="form-control" type="text" id="lastName" name="lastName" value="<%= customer.lastName %>">
                    </div>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text  bg-primary text-white">И.</span>
                        <input class="form-control" type="text" id="firstName" name="firstName" value="<%= customer.firstName %>">
                    </div>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text  bg-primary text-white">О.</span>
                        <input class="form-control" type="text" id="patronymic" name="patronymic" value="<%= customer.patronymic %>">
                    </div>
                </div>
                <div class="mb-3 input-group-sm">
                    <span class="input-group-text  bg-primary text-white">Адрес</span>
                    <textarea class="form-control" id="street" rows=2 name="street" ><%= customer.street %></textarea>
                </div>
                <div class="mb-3 input-group-sm"></div>
                <span class="input-group-text  bg-primary text-white">Комментарий</span>
                <textarea class="form-control" id="comment" rows=5 name="comment"><%= customer.comment %></textarea>
                <button class="btn btn-primary mt-3" type="submit">Сохранить</button>
                <input class="form-control invisible" type="text" id="id" name="id" value="<%= customer.id %>">
            </form>
        </div>
    </div>
</main>
</body>
</html>